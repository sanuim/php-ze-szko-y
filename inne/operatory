<?php
$a=1;
$b=2;
$c=3;
$d=4;

$dod=$a + $b;
$mno=$c * $d;
$and=$a & $b;
$or=$c | $d;
$and2=$a and $b;
$or2=$c or $d;
$true1=$a <> $b;
$true2=$c != $d;

 echo "zmienne: ".$a.", ".$b.", ".$c.", ".$d;
 echo "<br/>";
 echo "dodawanie pierwszej z drugą: ".$dod;
 echo "<br/>";
 echo "mnożenie trzeciej z czwartą: ".$mno;
 
